	"item": [
		{
			"name": "Sign in the user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Authentication token and basket ID are present\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.authentication.token).to.exist;\r",
							"    pm.expect(jsonData.authentication.bid).to.exist;\r",
							"    pm.environment.set(\"authToken\", jsonData.authentication.token);\r",
							"    pm.environment.set(\"basketId\", jsonData.authentication.bid);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"email\": \"{{email}}\",\r\n  \"password\": \"{{password}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/rest/user/login",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"rest",
						"user",
						"login"
					]
				}
			},
			"response": []
		},
